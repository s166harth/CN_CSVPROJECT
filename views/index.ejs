<!DOCTYPE html>
<html>
  <head>
    <title>CSV Upload</title>
  </head>

  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f7f7f7;
    }

    header {
      background-color: #2196f3;
      color: white;
      padding: 20px;
      text-align: center;
    }

    h1 {
      margin: 0;
      font-size: 36px;
    }

    form {
      margin-top: 30px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    label {
      font-size: 24px;
      margin-bottom: 10px;
    }

    input[type="file"] {
      padding: 10px;
      margin-bottom: 20px;
      border-radius: 5px;
      border: none;
      background-color: white;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      cursor: pointer;
    }

    input[type="submit"] {
      padding: 10px 20px;
      border-radius: 5px;
      border: none;
      background-color: #2196f3;
      color: white;
      font-size: 18px;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    input[type="submit"]:hover {
      background-color: #0d8bf0;
    }

    footer {
      background-color: #ddd;
      color: #666;
      padding: 10px;
      text-align: center;
    }
  </style>
  <body>
    <h1>Upload a CSV file</h1>
    <form action="/upload" method="POST" enctype="multipart/form-data">
      <input type="file" name="csv" />
      <button type="submit">Upload</button>
    </form>

    <ul>
      <% for (let file of files) { %>
        <li><%= file.name %> - <%= file.size %> bytes - <%= file.date %></li>
      <% } %>
    </ul>
    
  </body>
</html>
